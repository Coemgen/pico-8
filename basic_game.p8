pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
	x = 0
	y = 0
end

function _update()
	if btn(0) then x = x - 1 end
	if btn(1) then x = x + 1 end
	if btn(2) then y = y - 1 end
	if btn(3) then y = y + 1 end
	if x < 0 then 
		x = 0 
		sfx(0) 
	end
	if x > 120 then 
		x = 120 
		sfx(0) 
	end
	if y < 0 then 
		y = 0 
		sfx(0) 
	end
	if y > 120 then 
		y = 120 
		sfx(0) 
	end
end

function _draw()
	cls(1)
	spr(1, x, y)
end
